<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="screenWPFapp.MainWindow"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
     mc:Ignorable="d"
     Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="ActiveWindowButton" Content="Take Screenshot of Active Window" Click="ActiveWindowButton_Click"/>
            <Button x:Name="FullScreenButton" Content="Take Screenshot of Full Screen" Click="FullScreenButton_Click"/>
        </StackPanel>
    </Grid>
</Window>